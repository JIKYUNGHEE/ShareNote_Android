<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_stock_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_stock_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_stock_content"
        android:layout_width="@dimen/tv_post_trading_note_width"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/post_trading_note_stock_name" />

    <TextView
        android:id="@+id/tv_stock_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_stock_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="@string/post_trading_note_stock_name_ex"
        android:textSize="14sp" />
</androidx.constraintlayout.widget.ConstraintLayout>