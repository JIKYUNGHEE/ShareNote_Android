<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_rectangular"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_trading_note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trading_note_title"
        android:textSize="@dimen/tv_trading_note_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_trading_note_title"
        app:layout_constraintLeft_toLeftOf="@id/tv_trading_note_title"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_trading_note_test_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trading_note_test_tag"
            android:textSize="@dimen/tv_trading_note_test_tag"
            android:padding="3dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/background_trading_note_tags"
           />
        <TextView
            android:id="@+id/tv_trading_note_test_tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trading_note_test_tag2"
            android:textSize="@dimen/tv_trading_note_test_tag"
            android:padding="3dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/background_trading_note_tags"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>